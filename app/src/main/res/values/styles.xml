<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="statistic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_small_12</item>
    </style>

    <style name="statistic.numbers" parent="statistic">
        <item name="android:textSize">@dimen/font_normal_15</item>
    </style>

    <style name="user_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="auth_layout_style">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingBottom">@dimen/spacing_medial_24</item>
        <item name="android:paddingLeft">@dimen/spacing_medial_24</item>
        <item name="android:paddingRight">@dimen/spacing_medial_24</item>
        <item name="android:background">@color/white</item>
</style>


    <style name="auth_textinput_style">
    <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    <item name="android:textColorHint">@color/grey_light</item>
</style>

    <style name="auth_textfield_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">30</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="auth_button">
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="auth_clicktable_textview_style">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:text">@string/auth.title.forgot_pass</item>
        <item name="android:textColor">@color/grey_light</item>

    </style>

    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/color_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
