<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/drawer_header"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:paddingBottom="@dimen/spacing_small_8"
                android:paddingEnd="@dimen/spacing_normal_16"
                android:paddingLeft="@dimen/spacing_normal_16"
                android:paddingRight="@dimen/spacing_normal_16"
                android:paddingStart="@dimen/spacing_normal_16"
                android:paddingTop="@dimen/spacing_medial_24"
                android:background="@drawable/nav_header_bg">

    <ImageView
        android:id="@+id/user_avatar"
        android:src="@drawable/user_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/spacing_normal_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_txt"
            style="@style/user_info"
            android:fontFamily="sans-serif-medium"
            android:text="Вереникин Дмитрий"/>

        <TextView
            android:id="@+id/user_email_txt"
            style="@style/user_info"
            android:fontFamily="sans-serif"
            android:text="somemail@mail.ru"/>

    </LinearLayout>

</RelativeLayout>